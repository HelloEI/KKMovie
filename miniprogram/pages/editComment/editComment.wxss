/* miniprogram/pages/editComment/editComment.wxss */

.comment-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f7f9fb;
  position: relative;
  padding-top: 30rpx;
  height: 100vh;
}
.comment-img {
  width: 300rpx;
  position: absolute;
  z-index: 9;
  top: 25rpx;
}
.comment-detail {
  display: flex;
  position: relative;
  top: 100rpx;
  flex-direction: column;
  align-items: center;
  padding: 50rpx;
  border: 1px solid #e2e7ed;
  background: #fff;
  margin-bottom: 40rpx;
  width: 80%;
}

.comment-title {
  margin-top: 300rpx;
}

.comment-content{
  margin-top: 30rpx;
  text-align: center;
}
.record-content{
  margin-top:40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.record-Radio {
  height: 300rpx;
}
.radio-content{
  position: relative;
  width: 350rpx;
  height: 85rpx;
  background: #7f99af;
  opacity: 0.8;
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #fff;
  line-height: 85rpx;
}
.radio-time{
  margin-left:5%;
}
.radio-play{
  width: 100rpx;
  height: 100rpx;
  box-sizing: border-box;
  overflow: hidden;
  transform: rotate(135deg)
}
.input-area {
  width: 600rpx;
  font-size: 34rpx;
}
.skip-buttons {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  background: #ffff;
  border-top: 1px solid #f1f1f1;
}

.skip-buttons .btn {
  flex: 1;
  text-align: center;
  width: 100%;
  height: 100rpx;
  color: #7f99af;
  line-height: 100rpx;
}

.recordingBtn {
  padding: 15rpx 45rpx 15rpx 40rpx;
  border: 1px solid #7f99af;
  border-radius: 8rpx;
  color: #7f99af;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
}
