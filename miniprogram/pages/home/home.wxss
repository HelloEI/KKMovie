/* miniprogram/pages/home/home.wxss */
.home-container{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.movie-detail{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.movie-img{
  padding:15rpx;
}
.movie-title, .movie-comment{
  margin-top:15rpx;
}
.skip-buttons{
  position: fixed;
  bottom: 0; 
  display: flex;
  flex-direction: row;
  width: 100%;
  background: #F6F6F6;
}
.skip-buttons .btn{
  flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}
