<!--miniprogram/pages/home/home.wxml-->
<view class='home-container'>
  <view class='movie-detail'> 
    <image class='movie-img' src="{{movieImg}}" mode="aspectFit"></image>
    <view class='movie-title'>{{movieTitle}}</view>
    <view class='movie-comment'>
      <image class="head-shot" src='../../images/wxy.jpg' mode="aspectFill"></image>
      <view class='comment-tip'>XUANYI给你推荐了一部电影</view>
    </view>
  </view>
  <view class='skip-buttons'>
    <view class='btn iconfont icon-remenicon'>热门</view>
    <view class='btn iconfont icon-wode'>我的</view> 
  </view>
</view>
