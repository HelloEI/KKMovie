<!--miniprogram/pages/commentDetail/commentDetail.wxml-->
<view class='comment-container'>
  <image class='comment-img' src='{{comment.image}}' mode="widthFix"></image>
  <view class='comment-detail'>
    <view class='comment-title'>{{comment.title}}</view>
    <view class='comment-des'>{{comment.description}}</view>
    <view class='skip-buttons'>
      <view class='btn iconfont icon-chakan' bindtap='skipToComment'>收藏影评</view>
      <view class='btn iconfont icon-iconset0130' bindtap='skipToComment'>写影评</view>
    </view>
  </view>
</view>
